<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_mainBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_edeef2"
    android:orientation="vertical"
    tools:ignore="MissingPrefix, NewApi">

    <!-- 날짜 선택 영역 -->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_datePickLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1920"
        app:scale_base_height="131">

        <ImageView
            android:id="@+id/_beforeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_calendar_left"
            android:visibility="gone"
            app:scale_left="680"
            app:scale_top="50"
            app:scale_width="24"
            app:scale_height="40"/>

        <ImageView
            android:id="@+id/_beforeButtonRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:scale_left="660"
            app:scale_top="30"
            app:scale_width="60"
            app:scale_height="80"/>

        <TextView
            android:id="@+id/_homeworkDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_000000"
            app:scale_left="810"
            app:scale_top="0"
            app:scale_width="300"
            app:scale_height="131"
            app:scale_textsize="32" />

        <ImageView
            android:id="@+id/_afterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_calendar_right"
            android:visibility="gone"
            app:scale_left="1216"
            app:scale_top="50"
            app:scale_width="24"
            app:scale_height="40"/>

        <ImageView
            android:id="@+id/_afterButtonRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:scale_left="1200"
            app:scale_top="30"
            app:scale_width="60"
            app:scale_height="80"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_resultCommentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:scale_base_width="1920"
        app:scale_base_height="110">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_list_violet"
            app:scale_left="46"
            app:scale_top="0"
            app:scale_width="1828"
            app:scale_height="100"/>

        <ImageView
            android:id="@+id/_homeworkResultImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_stamp_e0"
            app:scale_left="84"
            app:scale_top="10"
            app:scale_width="80"
            app:scale_height="80"/>

        <com.littlefox.library.view.text.SeparateTextView
            android:id="@+id/_homeworkResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_excellent"
            android:textColor="@color/color_fa4959"
            android:gravity="center_vertical"
            app:scale_left="191"
            app:scale_top="0"
            app:scale_width="1650"
            app:scale_height="100"
            app:scale_textsize="30"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <!-- 코멘트 1개 -->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_oneCommentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1920"
        app:scale_base_height="100">

        <ImageView
            android:id="@+id/_homeworkStudentCommentBg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_list_green"
            app:scale_left="46"
            app:scale_top="0"
            app:scale_width="1828"
            app:scale_height="80"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_smile_chat"
            app:scale_left="96"
            app:scale_top="11"
            app:scale_width="55"
            app:scale_height="55"/>

        <TextView
            android:id="@+id/_homeworkStudentComment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_student_comment"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_left="172"
            app:scale_top="0"
            app:scale_width="350"
            app:scale_height="80"
            app:scale_textsize="32"/>

        <TextView
            android:id="@+id/_homeworkStudentCommentButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_comment_write"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/round_box_green_60"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:visibility="gone"
            app:scale_left="1480"
            app:scale_top="10"
            app:scale_width="344"
            app:scale_height="60"
            app:scale_textsize="30"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <!-- 코멘트 2개 -->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_twoCommentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:scale_base_width="1920"
        app:scale_base_height="100">

        <ImageView
            android:id="@+id/_homeworkStudentCommentBg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_list_green"
            app:scale_left="46"
            app:scale_top="0"
            app:scale_width="904"
            app:scale_height="80"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_smile_chat"
            app:scale_left="96"
            app:scale_top="11"
            app:scale_width="55"
            app:scale_height="55"/>

        <TextView
            android:id="@+id/_homeworkStudentComment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_student_comment"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_left="172"
            app:scale_top="0"
            app:scale_width="350"
            app:scale_height="80"
            app:scale_textsize="32"/>

        <TextView
            android:id="@+id/_homeworkStudentCommentButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_comment_write"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/round_box_green_60"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:visibility="gone"
            app:scale_left="556"
            app:scale_top="10"
            app:scale_width="344"
            app:scale_height="60"
            app:scale_textsize="30"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_list_yellow"
            app:scale_left="970"
            app:scale_top="0"
            app:scale_width="904"
            app:scale_height="80"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_homework_speaker"
            app:scale_left="1020"
            app:scale_top="19"
            app:scale_width="55"
            app:scale_height="45"/>

        <TextView
            android:id="@+id/_homeworkTeacherComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_teacher_comment"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_left="1096"
            app:scale_top="0"
            app:scale_width="350"
            app:scale_height="80"
            app:scale_textsize="32"/>

        <TextView
            android:id="@+id/_homeworkTeacherCommentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_comment_watch"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/round_box_empty_green_60"
            android:textColor="@color/color_23cc8a"
            android:gravity="center"
            app:scale_left="1480"
            app:scale_top="10"
            app:scale_width="344"
            app:scale_height="60"
            app:scale_textsize="30"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <!-- 숙제 리스트 영역 -->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_homeworkListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1920"
        app:scale_base_height="94">

        <TextView
            android:id="@+id/_homeworkListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_homework_list"
            android:textColor="@color/color_000000"
            android:gravity="center_vertical"
            app:scale_left="66"
            app:scale_top="0"
            app:scale_width="180"
            app:scale_height="80"
            app:scale_textsize="32"/>

        <ImageView
            android:id="@+id/_homeworkInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_icon"
            app:scale_left="203"
            app:scale_top="17"
            app:scale_width="50"
            app:scale_height="50"/>

        <ImageView
            android:id="@+id/_homeworkFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_list"
            app:scale_left="1374"
            app:scale_top="0"
            app:scale_width="500"
            app:scale_height="80"/>

        <ImageView
            android:id="@+id/_homeworkFilterDownImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/btn_pop_down"
            app:scale_left="1826"
            app:scale_top="32"
            app:scale_width="23"
            app:scale_height="13" />

        <TextView
            android:id="@+id/_homeworkFilterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="전체"
            android:textColor="@color/color_b7b7b7"
            app:scale_left="1394"
            app:scale_top="0"
            app:scale_width="270"
            app:scale_height="80"
            app:scale_textsize="32" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <RelativeLayout
        android:id="@+id/_loadingProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:scale_base_width="1920"
            app:scale_base_height="150">

            <com.littlefox.library.view.dialog.ProgressWheel
                android:id="@+id/_progressWheelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:matProg_barColor="@color/color_20b1f9"
                app:matProg_progressIndeterminate="true"
                app:scale_height="150"
                app:scale_left="885"
                app:scale_top="0"
                app:scale_width="150" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/_homeworkListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
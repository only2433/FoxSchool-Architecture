<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/_topLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_width="1920"
                app:scale_base_height="130">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_bg"
                    app:scale_left="728"
                    app:scale_top="30"
                    app:scale_width="464"
                    app:scale_height="67"/>

                <ImageView
                    android:id="@+id/_switchAnimationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_storybook_on"
                    android:scaleType="fitXY"
                    app:scale_left="728"
                    app:scale_top="30"
                    app:scale_width="232"
                    app:scale_height="67"/>

                <TextView
                    android:id="@+id/_levelsTextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_levels"
                    android:textColor="@color/color_26d0df"
                    android:gravity="center"
                    app:scale_left="728"
                    app:scale_top="30"
                    app:scale_width="232"
                    app:scale_height="67"
                    app:scale_textsize="28"/>

                <TextView
                    android:id="@+id/_categoriesTextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_categories"
                    android:textColor="@color/color_a0a0a0"
                    android:gravity="center"
                    app:scale_left="960"
                    app:scale_top="30"
                    app:scale_width="232"
                    app:scale_height="67"
                    app:scale_textsize="28"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_dbdada"
                    app:scale_left="0"
                    app:scale_top="176"
                    app:scale_width="1080"
                    app:scale_height="2"/>

            </com.ssomai.android.scalablelayout.ScalableLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/_storyGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/_topLayout"
                />


        </RelativeLayout>


    <com.ssomai.android.scalablelayout.ScalableLayout

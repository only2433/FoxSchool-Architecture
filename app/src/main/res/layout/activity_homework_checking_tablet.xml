<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_mainBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_edeef2"
    tools:ignore="MissingPrefix, NewApi"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/_titleBaseLayout"
            layout="@layout/topbar_common_menu_tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/_homeworkCheckingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_width="1920"
            app:scale_base_height="1066">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_box_1w"
                app:scale_left="46"
                app:scale_top="50"
                app:scale_width="1828"
                app:scale_height="374" />

            <ImageView
                android:id="@+id/_homeworkEvalE0Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_off"
                app:scale_left="425"
                app:scale_top="186"
                app:scale_width="50"
                app:scale_height="50" />

            <ImageView
                android:id="@+id/_homeworkEvalE1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_on"
                app:scale_left="831"
                app:scale_top="186"
                app:scale_width="50"
                app:scale_height="50" />

            <ImageView
                android:id="@+id/_homeworkEvalE2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_off"
                app:scale_left="1236"
                app:scale_top="186"
                app:scale_width="50"
                app:scale_height="50" />

            <ImageView
                android:id="@+id/_homeworkEvalE0Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stamp_e0"
                app:scale_left="507"
                app:scale_top="130"
                app:scale_width="164"
                app:scale_height="162" />

            <ImageView
                android:id="@+id/_homeworkEvalE1Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stamp_e1"
                app:scale_left="913"
                app:scale_top="130"
                app:scale_width="164"
                app:scale_height="162" />

            <ImageView
                android:id="@+id/_homeworkEvalE2Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_stamp_e2"
                app:scale_left="1318"
                app:scale_top="130"
                app:scale_width="164"
                app:scale_height="162" />

            <TextView
                android:id="@+id/_homeworkEvalE0Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/text_homework_eval_e0"
                android:textColor="@color/color_444444"
                app:scale_left="512"
                app:scale_top="300"
                app:scale_width="250"
                app:scale_height="60"
                app:scale_textsize="32"/>

            <TextView
                android:id="@+id/_homeworkEvalE1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/text_homework_eval_e1"
                android:textColor="@color/color_444444"
                app:scale_left="935"
                app:scale_top="300"
                app:scale_width="250"
                app:scale_height="60"
                app:scale_textsize="32"/>

            <TextView
                android:id="@+id/_homeworkEvalE2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/text_homework_eval_e2"
                android:textColor="@color/color_444444"
                app:scale_left="1304"
                app:scale_top="300"
                app:scale_width="300"
                app:scale_height="60"
                app:scale_textsize="32"/>

            <TextView
                android:id="@+id/_homeworkTeacherComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선생님 말씀"
                android:textColor="@color/color_000000"
                app:scale_left="66"
                app:scale_top="450"
                app:scale_width="300"
                app:scale_height="60"
                app:scale_textsize="32"/>

            <TextView
                android:id="@+id/_commentInputCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0/100 byte"
                android:textColor="@color/color_b7b7b7"
                app:scale_left="1330"
                app:scale_top="456"
                app:scale_width="500"
                app:scale_height="60"
                app:scale_textsize="30"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_box_1w"
                app:scale_left="46"
                app:scale_top="500"
                app:scale_width="1828"
                app:scale_height="200" />

            <EditText
                android:id="@+id/_commentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/text_homework_comment_option"
                android:inputType="textMultiLine"
                android:textColorHint="@color/color_b7b7b7"
                android:textColor="@color/color_444444"
                app:scale_left="66"
                app:scale_top="532"
                app:scale_width="1788"
                app:scale_height="140"
                app:scale_textsize="30"/>

            <TextView
                android:id="@+id/_checkingRegisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_light_blue_84"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="@string/text_register"
                android:textColor="@color/color_ffffff"
                app:scale_left="470"
                app:scale_top="750"
                app:scale_width="480"
                app:scale_height="84"
                app:scale_textsize="32" />

            <TextView
                android:id="@+id/_checkingCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_empty_light_blue_84"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="@string/text_cancel"
                android:textColor="@color/color_29c8e6"
                app:scale_left="970"
                app:scale_top="750"
                app:scale_width="480"
                app:scale_height="84"
                app:scale_textsize="32" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">



            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f5f5"
                app:scale_base_height="40"
                app:scale_base_width="1080"></com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/_switchButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f5f5"
                app:scale_base_height="138"
                app:scale_base_width="1080">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_bg"
                    app:scale_height="96"
                    app:scale_left="210"
                    app:scale_top="0"
                    app:scale_width="660" />

                <ImageView
                    android:id="@+id/_switchAnimationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/tab_bokshelf_on"
                    app:scale_height="96"
                    app:scale_left="210"
                    app:scale_top="0"
                    app:scale_width="330" />

                <TextView
                    android:id="@+id/_bookshelfTextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_bookshelf"
                    android:textColor="@color/color_8d65ff"
                    app:scale_height="96"
                    app:scale_left="210"
                    app:scale_textsize="40"
                    app:scale_top="0"
                    app:scale_width="330" />

                <TextView
                    android:id="@+id/_vocabularyTextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_vocabulary"
                    android:textColor="@color/color_a0a0a0"
                    app:scale_height="96"
                    app:scale_left="540"
                    app:scale_textsize="40"
                    app:scale_top="0"
                    app:scale_width="330" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_dbdada"
                    app:scale_height="2"
                    app:scale_left="0"
                    app:scale_top="136"
                    app:scale_width="1080" />

            </com.ssomai.android.scalablelayout.ScalableLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/_booksScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/_booksItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
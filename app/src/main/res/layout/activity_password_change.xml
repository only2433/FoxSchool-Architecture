<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_mainBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_edeef2"
    tools:ignore="MissingPrefix, NewApi"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/_titleBaseLayout"
            layout="@layout/topbar_common_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/_passwordChangeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_width="1080"
            app:scale_base_height="1704">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                app:scale_left="30"
                app:scale_top="44"
                app:scale_width="1020"
                app:scale_height="1616" />

            <ImageView
                android:id="@+id/_inputPasswordEditBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                app:scale_left="96"
                app:scale_top="119"
                app:scale_width="884"
                app:scale_height="120" />

            <EditText
                android:id="@+id/_inputPasswordEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/text_password"
                android:inputType="textPassword"
                android:singleLine="true"
                app:scale_left="130"
                app:scale_top="119"
                app:scale_width="816"
                app:scale_height="120"
                app:scale_textsize="38" />

            <ImageView
                android:id="@+id/_inputNewPasswordEditBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                app:scale_left="96"
                app:scale_top="267"
                app:scale_width="884"
                app:scale_height="120" />

            <EditText
                android:id="@+id/_inputNewPasswordEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/text_new_password"
                android:inputType="textPassword"
                android:singleLine="true"
                app:scale_left="130"
                app:scale_top="267"
                app:scale_width="816"
                app:scale_height="120"
                app:scale_textsize="38" />

            <ImageView
                android:id="@+id/_inputNewPasswordConfirmEditBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box"
                app:scale_left="96"
                app:scale_top="415"
                app:scale_width="884"
                app:scale_height="120" />

            <EditText
                android:id="@+id/_inputNewPasswordConfirmEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/text_new_password_confirm"
                android:inputType="textPassword"
                android:singleLine="true"
                app:scale_left="130"
                app:scale_top="415"
                app:scale_width="816"
                app:scale_height="120"
                app:scale_textsize="38" />

            <TextView
                android:id="@+id/_saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_box_gray_84"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="@string/text_save"
                android:textColor="@color/color_ffffff"
                android:enabled="false"
                app:scale_left="100"
                app:scale_top="595"
                app:scale_width="880"
                app:scale_height="120"
                app:scale_textsize="42" />

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
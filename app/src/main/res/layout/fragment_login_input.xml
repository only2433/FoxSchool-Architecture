<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix, NewApi"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_width="1080"
        app:scale_base_height="50"></com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_contentsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_width="1080"
        app:scale_base_height="1000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box_list"
            app:scale_left="30"
            app:scale_top="0"
            app:scale_width="1020"
            app:scale_height="1000"/>

        <ImageView
            android:id="@+id/_inputIdEditBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box"
            app:scale_left="98"
            app:scale_top="223"
            app:scale_width="884"
            app:scale_height="120"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_id"
            android:scaleType="centerInside"
            app:scale_left="98"
            app:scale_top="223"
            app:scale_width="120"
            app:scale_height="120"/>
        <EditText
            android:id="@+id/_inputIdEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/text_email_id_input"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:background="@null"
            app:scale_left="218"
            app:scale_top="223"
            app:scale_width="644"
            app:scale_height="120"
            app:scale_textsize="40"/>

        <ImageView
            android:id="@+id/_inputPasswordEditBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box"
            app:scale_left="98"
            app:scale_top="371"
            app:scale_width="884"
            app:scale_height="120"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_lock"
            android:scaleType="centerInside"
            app:scale_left="98"
            app:scale_top="371"
            app:scale_width="120"
            app:scale_height="120"/>
        <EditText
            android:id="@+id/_inputPasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/text_password_input"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:background="@null"
            app:scale_left="218"
            app:scale_top="371"
            app:scale_width="644"
            app:scale_height="120"
            app:scale_textsize="40"/>

        <ImageView
            android:id="@+id/_autoLoginIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_off"
            android:scaleType="centerInside"
            app:scale_left="350"
            app:scale_top="509"
            app:scale_width="100"
            app:scale_height="100"/>

        <TextView
            android:id="@+id/_autoLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_auto_login"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_left="470"
            app:scale_top="509"
            app:scale_width="400"
            app:scale_height="100"
            app:scale_textsize="40"/>

        <ImageView
            android:id="@+id/_inputSchoolEditBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box"
            app:scale_left="98"
            app:scale_top="75"
            app:scale_width="884"
            app:scale_height="120"/>

        <ImageView
            android:id="@+id/_inputSchoolLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_707070"
            android:visibility="gone"
            app:scale_left="98"
            app:scale_top="195"
            app:scale_width="884"
            app:scale_height="1"/>

        <ImageView
            android:id="@+id/_inputSchoolDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/btn_tex_del"
            android:visibility="gone"
            app:scale_left="887"
            app:scale_top="106"
            app:scale_width="60"
            app:scale_height="60"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_2"
            android:scaleType="centerInside"
            app:scale_left="98"
            app:scale_top="75"
            app:scale_width="120"
            app:scale_height="120"/>
        <EditText
            android:id="@+id/_inputSchoolEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/text_school_search"
            android:gravity="center_vertical"
            android:background="@null"
            app:scale_left="218"
            app:scale_top="75"
            app:scale_width="644"
            app:scale_height="120"
            app:scale_textsize="40"/>

        <TextView
            android:id="@+id/_loginButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_login"
            android:textColor="@color/color_ffffff"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/btn_b1"
            android:gravity="center"
            app:scale_left="146"
            app:scale_top="640"
            app:scale_width="788"
            app:scale_height="120"
            app:scale_textsize="40"/>

        <TextView
            android:id="@+id/_forgetIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_find_login"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_top="828"
            app:scale_left="280"
            app:scale_width="260"
            app:scale_height="90"
            app:scale_textsize="38"
            />

        <ImageView
            android:id="@+id/_forgetDividerLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/color_444444"
            android:scaleType="fitXY"
            app:scale_left="540"
            app:scale_top="850"
            app:scale_width="2"
            app:scale_height="40"/>

        <TextView
            android:id="@+id/_forgetPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_find_passoword"
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            app:scale_top="828"
            app:scale_left="612"
            app:scale_width="310"
            app:scale_height="90"
            app:scale_textsize="38"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:scale_base_width="1080"
            app:scale_base_height="254">
            <TextView
                android:id="@+id/_onlyWebSignPossibleTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_sign_only_web"
                android:textColor="@color/color_000000"
                android:gravity="center"
                app:scale_left="30"
                app:scale_top="0"
                app:scale_width="1020"
                app:scale_height="50"
                app:scale_textsize="40"/>
            <TextView
                android:id="@+id/_customerCenterInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_666666"
                android:gravity="center_horizontal"
                app:scale_left="30"
                app:scale_top="106"
                app:scale_width="1020"
                app:scale_height="100"
                app:scale_textsize="40"/>

            <TextView
                android:id="@+id/_signButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_membership"
                android:textColor="@color/color_23a3e5"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@drawable/btn_bl"
                android:gravity="center"
                app:scale_left="326"
                app:scale_top="256"
                app:scale_width="428"
                app:scale_height="120"
                app:scale_textsize="40"/>
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </RelativeLayout>



</LinearLayout>